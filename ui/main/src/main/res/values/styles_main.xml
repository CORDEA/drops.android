<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Main" />

    <style name="Main.Navigation" />

    <style name="Main.Navigation.Item" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/text_size_body_1</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="rippleColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Main.Item" />

    <style name="Main.Item.Image" />

    <style name="Main.Item.Image.Shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18%</item>
    </style>

    <style name="Main.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="thumbColor">@color/colorAccent</item>
        <item name="trackColor">@color/colorAccentLight</item>
        <item name="haloColor">@color/colorPrimary</item>
        <item name="labelStyle">@style/Main.Slider.Tooltip</item>
    </style>

    <style name="Main.Slider.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="android:textAppearance">@style/Main.Slider.Tooltip.Label</item>
    </style>

    <style name="Main.Slider.Tooltip.Label" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Main.Chip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textColor">@color/white</item>
        <item name="checkedIcon">@drawable/ic_baseline_check_circle_24</item>
        <item name="chipBackgroundColor">@color/colorAccent</item>
    </style>
</resources>
