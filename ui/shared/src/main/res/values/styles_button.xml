        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="cornerRadius">22dp</item>
    </style>

    <style name="Drops.Navigation" />

    <style name="Drops.Navigation.Item" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/text_size_body_1</item>
