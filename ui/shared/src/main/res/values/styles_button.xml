        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="rippleColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Drops.Fab" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
